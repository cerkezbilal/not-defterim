<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

        <TextView
            android:layout_width="0dp"
            android:layout_weight="0.9"
            android:layout_height="wrap_content"
            android:text="Notlarım"
            android:textStyle="bold|italic"
            android:textColor="@android:color/holo_red_dark"
            android:textSize="34sp"
            android:layout_margin="10dp"/>

        <ImageButton
            android:id="@+id/imgbtnEkle"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="0.1"

            android:src="@drawable/ekle" />
    </LinearLayout>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/etbaslikEkle"
        android:hint="Başlık"
        android:visibility="gone"/>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/eticerikEkle"
        android:hint="İçerik"
        android:visibility="gone"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <Button
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="NOT EKLE"
            android:id="@+id/btnNotEkle"
            android:visibility="gone"/>
        <Button
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="VAZGEÇ"
            android:id="@+id/btnNotVazgec"
            android:visibility="gone"/>

    </LinearLayout>





    <ListView
        android:id="@+id/listemiz"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        ></ListView>

</LinearLayout>